<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/textViewId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="登录"
        />
    
    
    <View 
        android:id="@+id/line1Id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textViewId"
        android:background="#BFBFBFBF"
        />
    
    
    <RelativeLayout 
        android:id="@+id/relativeId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line1Id"
        >
        
        <ImageView 
            
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/login_logo"
            android:layout_centerInParent="true"
            />
        
        
        
    </RelativeLayout>
    
    <View 
        android:id="@+id/line2Id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relativeId"
        android:background="#BFBFBFBF"
        />
    

    <LinearLayout 
        android:id="@+id/linear1Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line2Id"
        >
        <ImageView 
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/login_icon_user"
            android:layout_margin="10dp"
            />
        
        <EditText 
            android:id="@+id/userId"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:background="@null"
            android:hint="请输入你的手机号"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:inputType="text"
            />        
    </LinearLayout>
    
    <View 
        android:id="@+id/line3Id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linear1Id"
        android:background="#BFBFBFBF"
        />
    
    
    <LinearLayout 
        android:id="@+id/linear2Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line3Id"
        >
        <ImageView 
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/login_icon_pwd"
            android:layout_margin="10dp"
            />
        
        <EditText 
            android:id="@+id/pwdId"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:background="@null"
            android:hint="请输入你的密码"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:inputType="text"
            
            />
        
    </LinearLayout>
    
    <View 
        android:id="@+id/line4Id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linear2Id"
        android:background="#BFBFBFBF"
        />
    
    
    <View 
        android:id="@+id/line5Id"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/line4Id"
        />
    
    
    <Button 
        android:id="@+id/btnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_below="@id/line5Id"
        android:layout_margin="6dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/login"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        
        android:layout_below="@id/btnId"
        
        
        >
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            
            >
            
            <TextView 
                android:layout_width="wrap_content"
            	android:layout_height="fill_parent"
                android:gravity="center"
                android:text="忘记密码？   "
                
                
                />
            
            <TextView 
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="点这里找回"
                android:textColor="#00BFFF"
                
                />
            
            
            
        </LinearLayout>
        
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_weight="1"
            
            android:background="@drawable/button"
            
            android:textColor="#00BFFF"
           
            
            />
        
        
        
    </LinearLayout>
    

</RelativeLayout>
